<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data></data>
    <LinearLayout
        android:id="@+id/bottomsheetRl"
        android:background="@drawable/topcornners_round"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bottom_sheet_heading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:text="Delivery Date &amp; Time"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_below="@+id/tv_bottom_sheet_heading"
            android:id="@+id/tabLL"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/greyborder"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:id="@+id/standardTv"
                android:text="@string/standard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:textSize="17sp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:id="@+id/express"
                android:text="@string/express"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:id="@+id/view1"
            android:background="@color/md_grey_300"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <devs.mulham.horizontalcalendar.HorizontalCalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:textColorSelected="#FFFF"/>
        <TextView
            android:visibility="gone"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="17sp"
            android:paddingBottom="@dimen/_20sdp"
            android:id="@+id/expressViewTv"
            android:text="@string/order_will_be_delivered_within_45_minutes_n_between_9am_to_8pm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/TimeLL"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:padding="@dimen/_10sdp"
                android:id="@+id/radioBtn1"
                android:textColor="@color/md_grey_800"
                android:text="@string/_10_00_am_12_00_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/md_grey_300"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RadioButton
                android:padding="@dimen/_10sdp"
                android:id="@+id/radioBtn2"
                android:textColor="@color/md_grey_800"
                android:text="@string/_12_00_am_02_00_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/md_grey_300"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RadioButton
                android:padding="@dimen/_10sdp"
                android:id="@+id/radioBtn3"
                android:textColor="@color/md_grey_800"
                android:text="@string/_02_00_am_04_00_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:id="@+id/doneTv"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>
</layout>
