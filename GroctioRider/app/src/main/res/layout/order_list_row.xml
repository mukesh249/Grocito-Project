<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data></data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:elevation="@dimen/dp_5"
        app:contentPadding="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtOrderId"
                    style="@style/normal_text_view"
                    android:layout_weight="1"
                    android:text="OrderID: CRN75"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtDeliveryTime"
                    style="@style/normal_text_view"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="Delivery Time: 10:00am - 10:30am"
                    android:textSize="@dimen/sp_10"
                    android:gravity="right"
                    android:textColor="@color/gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/Grey_300"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPickAdd"
                    style="@style/normal_text_view"
                    android:textColor="@color/gray"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_shop"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="2/25, Aadarsh Colony, Vaishali Nagar, Jaipur(302020)"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:id="@+id/txtDeliveryAdd"
                    style="@style/normal_text_view"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_house"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="2/25, Aadarsh Colony, Vaishali Nagar, Jaipur(302020)"
                    android:textSize="@dimen/sp_12"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/Grey_300"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPrice"
                    style="@style/normal_text_view"
                    android:layout_weight="1"
                    android:text="Rs. 150"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtView"
                    style="@style/bold_text_view"
                    android:layout_width="wrap_content"
                    android:text="view"
                    android:textSize="@dimen/sp_14"
                    android:gravity="right"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
